{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "astro/tsconfigs/strictest",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"strictNullChecks": true,
		"jsxImportSource": "solid-js",
		"moduleResolution": "bundler",
		"module": "esnext",
		"baseUrl": "src/",
		"paths": {
			"~/components/*": ["components/*"],
			"~/content/*": ["content/*"],
			"~/layouts/*": ["layouts/*"],
			"~/pages/*": ["pages/*"],
			"~/styles/*": ["styles/*"]
		}
	}
}
