{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": "src/",
		"paths": {
			"~/components/*": ["components/*"],
			"~/content/*": ["content/*"],
			"~/layouts/*": ["layouts/*"],
			"~/pages/*": ["pages/*"],
			"~/styles/*": ["styles/*"]
		}
	}
}
