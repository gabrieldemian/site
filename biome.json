{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"ignore": [".astro/", ".direnv/", "dist/", "build/"]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noReactSpecificProps": "off",
				"noArrayIndexKey": "off"
			}
		}
	}
}
