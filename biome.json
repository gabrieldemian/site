{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"ignore": [".astro/", ".direnv/", "dist/", "build/"]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"noReactSpecificProps": {
					"fix": "safe"
				}
			},
			"suspicious": {
				"noArrayIndexKey": "off"
			}
		}
	}
}
